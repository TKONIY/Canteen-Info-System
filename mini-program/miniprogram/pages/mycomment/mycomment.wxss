/* pages/deployFunctions/deployFunctions.wxss */

@import "../../style/guide.wxss";
page {
  background: #ffffff; 
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: initial;
  box-sizing: border-box;
} 

.container1 {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
} 

.container2 {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f1f2f4;
  border-radius: 10px;
  margin-bottom: 10rpx
} 

.list {
  height: auto;
  background: #fff;
  transition: all 300ms ease;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  box-sizing: border-box;
}

.chathead{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-size: cover;
  padding-top:45rpx
}

.CONTAINER{
  border-bottom: 3px solid rgba(0, 0, 0, 0.1);
}

.name{
  padding-top:40rpx
}

.time{
  color: #0e01018f;
  font-size: 13px
}
.commenttext{
  padding-top:25rpx;
  font-size: 15px;
  flex-direction: column;
}

